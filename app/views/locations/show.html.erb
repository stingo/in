

<p>Locations: <%# render 'events/event', obj: @location_events	 %></p>



<h1 align="center">Listing all events</h1>



<div class="row">

<div class="col-xs-8 col-xs-offset-2">

<div class="well well-lg">

<div class="article-title">

<%= link_to @location.name, event_path(@location) %>

 <div class="btn btn-default mb-1x mr-1x zindez999">
                  <%= "Event".pluralize(@location.events.count) %><br / >
                    <span class="headline"><strong><%= @location.events.count %></strong></span>

</div>

<div class="article-body">

<%= truncate(@location.desc, length: 100) %>

</div>




<%# if @location.events.any? %>

<p>Events: <%# render @location.events %></p>

<%# end %>




<!--list location events -->



       <% @location_events.each do |event| %>
          <div class="col-lg-4 col-md-8 col-sm-6">
          <div class="panel border-grey po-slim">


        <div class="lead_small preach-content">

              <%= link_to (event.name), event %>

        </div>

        </div>
        </div>

        <% end %>


  <!--end list location events -->  













<div class="article-actions">

<%= link_to "Edit this location", edit_location_path(@location), class: "btn btn-xs btn-primary" %>

<%= link_to "Delete this location", location_path(@location), method: :delete,

data: { confirm: "Are you sure you want to delete the location?"},

class: "btn btn-xs btn-danger" %>

</div>

</div>

</div>

</div>











